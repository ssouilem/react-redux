{{/if}}

class {{ properCase name }} extends React.Component {
  render = () =>
    {{#if wantCSS}}
    <div className={{curly true}} styles.{{ camelCase name }} {{curly}}>
    {{else}}
    <div>
    {{/if}}
    {{#if wantMessages}}
      <FormattedMessage
        id='{{ camelCase name }}.title.example'
        description='A title for {{ properCase name }}'
